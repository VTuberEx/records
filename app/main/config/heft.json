{
	"$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",
	"aliasesByName": {},
	"phasesByName": {
		"build": {
			"cleanFiles": [{ "sourcePath": "lib" }],
			"tasksByName": {
				"typescript": {
					"taskPlugin": {
						"pluginPackage": "@rushstack/heft-typescript-plugin"
					}
				},
				"esbuild": {
					"taskPlugin": {
						"pluginName": "esbuild",
						"pluginPackage": "@app/local-rig",
						"options": {
							"scriptFile": "./src/preload/index.ts",
							"output": "./lib/preload"
						}
					}
				}
			}
		}
	},
	"heftPlugins": [{ "pluginPackage": "@app/local-rig", "pluginName": "clear-screen" }]
}
