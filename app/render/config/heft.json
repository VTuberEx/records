{
	"$schema": "https://developer.microsoft.com/json-schemas/heft/v0/heft.schema.json",
	"aliasesByName": {},
	"phasesByName": {
		"build": {
			"cleanFiles": [{ "sourcePath": "temp/tsc" }, { "sourcePath": "lib" }],
			"tasksByName": {
				"typescript": {
					"taskPlugin": {
						"pluginPackage": "@rushstack/heft-typescript-plugin"
					}
				},
				"esbuild": {
					"taskPlugin": {
						"pluginName": "esbuild",
						"pluginPackage": "@app/local-rig",
						"options": {
							"scriptFile": "./src/index.tsx",
							"styleFile": "./src/styles/index.scss",
							"output": "./lib",
							"publicPath": "app://dist/",
							"alias": { "react": "preact/compat", "react-dom": "preact/compat" }
						}
					}
				},
				"make-index-html": {
					"taskPlugin": {
						"pluginName": "copy-files-plugin",
						"pluginPackage": "@rushstack/heft",
						"options": {
							"copyOperations": [
								{
									"sourcePath": "src",
									"destinationFolders": ["lib"],
									"fileExtensions": [".html"]
								}
							]
						}
					}
				}
			}
		}
	},
	"heftPlugins": [{ "pluginPackage": "@app/local-rig", "pluginName": "clear-screen" }]
}
